[Unit]
Description=Taylor Swift MCP Server
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/taylor-mcp
Environment=ENV=production
Environment=PORT=8000
Environment=HOST=0.0.0.0
ExecStart=/home/ubuntu/taylor-mcp/venv/bin/python server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target